<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/bgImage"
            android:layout_width="wrap_content"
            android:elevation="@dimen/dimen_10"
            android:layout_margin="@dimen/dimen_20"
            app:cardCornerRadius="@dimen/dimen_10"
            app:cardBackgroundColor="@color/white"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#c5c8cc"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:backgroundTint="#b5b8bc"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/paslon"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_below="@+id/image"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_20"
                    android:text=""
                    android:textColor="@color/black_effective"
                    android:textStyle="bold"
                   android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_below="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/colorPrimary"
            app:tabIndicatorColor="@color/white"
            app:tabTextColor="@color/black_effective"
            app:tabSelectedTextColor="@color/white"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biodata"/>

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="visi misi" />



        </android.support.design.widget.TabLayout>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/tabs"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_30"
            android:id="@+id/biodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_effective"/>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/tabs"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:id="@+id/tvVisi"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visi"
            android:textColor="@color/black_effective"/>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/tvVisi"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:id="@+id/visi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_effective"/>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/visi"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:id="@+id/tvMisi"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Misi"
            android:textColor="@color/black_effective"/>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/tvMisi"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:id="@+id/misi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_effective"/>

    </RelativeLayout>
</ScrollView>