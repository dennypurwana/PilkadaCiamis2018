<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ciatul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILKADA CIAMIS 2018"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="@dimen/dimen_30"
        android:textSize="@dimen/dimen_30"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageKPU"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_alignParentBottom="true"
        android:src="@drawable/kpu"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/imagePilkada"
        android:layout_toRightOf="@+id/imageKPU"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_alignParentBottom="true"
        android:src="@drawable/pilkada"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_toLeftOf="@+id/imageKPU"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ciatul"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>